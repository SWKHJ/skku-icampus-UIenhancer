{
  "manifest_version": 3,
  "name": "Campus Cat Mate",
  "version": "1.0.0",
  "description": "iCampus 대시보드·캘린더 개선 + 고양이 공부 도우미(포인트·상점·타이머)를 제공하는 크롬 확장 프로그램입니다.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cat Custom Shop / Study Timer"
  },

  "permissions": [
    "storage",
    "scripting",
    "alarms",
    "contextMenus",
    "offscreen",
    "downloads"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://canvas.skku.edu/dist/webpack-production/submit_assignment-*.js*"
  ],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      
      "matches": ["https://*/*", "http://*/*"],
      "js": [
        "cat-mascot/config.js",
        "cat-mascot/ground.js",
        "cat-mascot/sprite.js",
        "cat-mascot/color_ui.js",
        "cat-mascot/boot.js"
      ],
      "run_at": "document_idle"
    },
    {
      
      "matches": ["https://canvas.skku.edu/*"],
      "js": ["cat-mascot/script_watch.js"],
      "run_at": "document_idle"
    },
    {
      
      "matches": ["https://canvas.skku.edu/calendar*"],
      "js": ["calendarUI.js"],
      "css": ["calendarUI.css"],
      "run_at": "document_idle"
    },
    {
      
      "matches": ["https://canvas.skku.edu/*"],
      "js": ["dashboardUI.js"],
      "css": ["dashboardUI.css"],
      "run_at": "document_idle"
    },
    {
    
      "matches": ["https://canvas.skku.edu/*"],
      "js": ["dday_badge.js"],
      "css": ["dday_badge.css"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
